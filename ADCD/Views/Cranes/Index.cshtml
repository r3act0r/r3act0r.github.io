@model IEnumerable<ADCD.Models.Crane>

@{
    ViewData["Title"] = "Rent A Crane";
}

<h1>Rent A Crane</h1>
<div class="container">

</div>
<div class="row">
    @foreach (var crane in Model)
    {
    <div class="col-sm-6">
        <div class="card">
            <img class="card-img-top thumbnail" src="@crane.Image" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title"><b>@crane.Capacity</b></h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><b>Boom Length:</b> @crane.BoomLength</li>
                <li class="list-group-item"><b>Jib Length:</b> @crane.JibLength</li>
                <li class="list-group-item"><b>Hourly Rate:</b> @crane.PerHourRate</li>
            </ul>
            <div class="card-body">
                <a asp-action="Details" asp-route-id="@crane.CraneId" class="btn btn-primary">Choose</a>
            </div>
        </div>
    </div>
    }
</div>

